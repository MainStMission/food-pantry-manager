%script{:type=>"text/javascript"}
  $('.datepicker').datepicker({format: 'dd/mm/yyyy'});
= simple_form_for [@household, neighbor],url: household_neighbor_path do |f|
  %h2 Household: #{neighbor.house_name}
  #neighbor-color.well.well-large.input-append.date
    .span3
      = f.input :first_name
    .span3
      = f.input :middle_name
    .span3
      = f.input :last_name
    .row
    .span3
      = f.input :sex, collection: [:Male, :Female] , input_html: {class: 'span2'}
    .span3
      = f.input :birth_date, as: :date_picker,  input_html: {id: 'dpYears', class: 'datepicker'}
    .span3
      = f.input :encrypted_ssn, input_html: {class: "span2"}
    .row
    .span3
      = f.input  :street,    label: 'Street'
    .span3
      = f.input  :apt,       label: 'Apt'
    .span3
      = f.input  :city,      label: 'City'
    .span3
      = f.input  :state,     label: 'State', input_html: { class: 'span2' }, collection: ['North Carolina', 'South Carolina', 'Virginia'], selected: 'North Carolina'
    .span3
      = f.input  :zip,       label: 'Zip', input_html: { class: 'span2'}
    .span3
      = f.input  :phone,     label: 'Phone', input_html: { class: 'span3' }
    .span6
      = f.input  :email,     label: 'Email', input_html: {class: 'span4'}
    .span3
      = f.input :spouse,     labeL: 'Married'
    .span11
      .hr
    .span3
      = f.input :proof_of_residency_type, label: 'Proof of Residency', collection: ['Drivers License','Passport']
    .span6
      = f.input :residency_date, as: :date_picker, as: :date_picker,  input_html: {id: 'dpYears', class: 'datepicker'}
    .row
    .row
    .span6
      = f.input :notes, :rows => 2, input_html: {rows: 4, class: 'span6' }
    .row
    .span11
      #submit-neighbor
        .btn-group
          = link_to_function '< Back', "history.back()", class: "btn"
          = f.button :submit, value: 'Update', class: 'btn btn-inverse'
          = link_to 'Destroy', household_neighbor_path, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'

  
