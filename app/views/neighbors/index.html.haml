%section.panel
  %header
    %h1 Our Neighbors
  .content
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Phone
          %th Street
          %th City
          %th Family Members
      %tbody
      - @neighbors.each do |neighbor|
        %tr
          %td= link_to neighbor.name, neighbor_path(neighbor)
          %td= neighbor.phone
          %td= neighbor.street
          %td= neighbor.city
          %td
            = link_to 'Edit', edit_neighbor_path(neighbor), class: 'btn btn-mini'
            = link_to 'Destroy', neighbor, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger'

    %br

    = link_to 'New Neighbor', new_neighbor_path, class: 'btn btn-primary'

