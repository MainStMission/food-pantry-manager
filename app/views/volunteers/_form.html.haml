= simple_form_for volunteer do |f|
  -if volunteer.errors.any?
    #error_explanation
      %h2= "#{pluralize(volunteer.errors.count, "error")} prohibited this volunteer from being saved:"
      %ul
        - volunteer.errors.full_messages.each do |msg|
          %li= msg
  =f.input  :first_name, label: 'First Name'
  =f.input  :last_name, label: 'Last Name'
  =f.input  :email, label: 'Email'
  =f.input  :phone, label: 'Phone'
  =f.input  :street,label: 'Street'
  =f.input :city,   label: 'City'
  =f.input :state,  label: 'State', input_html: { class: 'span1' }, placeholder: 'North Carolina'
  =f.input :zip,    label: 'Zip', input_html: {class: 'span1'}
  =f.input :status, label: 'Status', collection: [:Active, :In_Active]
  =f.button :submit, class: 'btn btn-primary', label: 'Save'
