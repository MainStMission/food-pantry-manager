= simple_form_for volunteer do |f|
  -if volunteer.errors.any?
    #error_explanation
      %h2= "#{pluralize(volunteer.errors.count, "error")} prohibited this volunteer from being saved:"
      %ul
        - volunteer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'
