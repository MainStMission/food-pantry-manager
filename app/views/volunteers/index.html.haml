%section.panel
  %header
    %h1
      %i.icon-user.icon-large
      &nbsp&nbsp&nbspVolunteers
  .content
    %table.table.table-striped
      %thead
        %tr
          %th ID
          %th First name
          %th Last name
          %th Status
          %th Time Cards
          %th Actions

      %tbody
      - volunteers.each do |volunteer|
        %tr
          %td= link_to volunteer.id, volunteer_path(volunteer)
          %td= volunteer.first_name
          %td= volunteer.last_name
          %td= volunteer.status
          %td= volunteer.time_cards.count
          %td
            = link_to 'Edit', edit_volunteer_path(volunteer), :class => 'btn btn-mini'
            = link_to 'Destroy', volunteer, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger'

    %br

    = link_to 'New Volunteer', new_volunteer_path, :class => 'btn btn-primary'
