= form_for @food do |f|
  - if @food.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food.errors.count, "error")} prohibited this food from being saved:"
      %ul
        - @food.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :upc
    = f.text_field :upc
  .field
    = f.label :guiding_star
    = f.number_field :guiding_star
  .field
    = f.label :f2e
    = f.text_field :f2e
  .field
    = f.label :tab_val
    = f.number_field :tab_val
  .actions
    = f.submit 'Save'
